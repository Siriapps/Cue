{
  "manifest_version": 3,
  "name": "cue - AI Workspace",
  "version": "0.0.1",
  "description": "Intent-aware Halo Strip with Go Live and Prism features.",
  "permissions": ["tabs", "activeTab", "storage", "tabCapture", "offscreen"],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:3000/*",
    "http://127.0.0.1:3001/*",
    "http://127.0.0.1:8000/*",
    "https://docs.google.com/*",
    "https://sheets.google.com/*",
    "https://drive.google.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://meet.google.com/*",
    "https://calendar.google.com/*",
    "https://mail.google.com/*",
    "https://gmail.com/*",
    "https://*.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icons/icon.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
